rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function để check role
    function hasRole(role) {
      return request.auth != null && 
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == role;
    }
    
    // Audio files - authenticated users can read
    match /audio/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && hasRole('admin');
    }
    
    // Images - public read for artwork (songs, albums, artists)
    match /images/{allPaths=**} {
      allow read: if true; // Public read for music artwork
      allow write: if request.auth != null && hasRole('admin');
    }
    
    // Downloads - users can only access their own
    match /downloads/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

